# Configuration d'environnement pour CMCI CR Backend
# Copier ce fichier en .env et ajuster les valeurs

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cmci_cr
DB_USERNAME=cmci_user
DB_PASSWORD=cmci_password
DB_POOL_SIZE=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Keycloak OAuth2
KEYCLOAK_ISSUER_URI=http://localhost:8180/realms/cmci
KEYCLOAK_JWK_SET_URI=http://localhost:8180/realms/cmci/protocol/openid-connect/certs

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Server
SERVER_PORT=8081

# Logging
LOG_LEVEL=DEBUG
WEB_LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
SQL_LOG_LEVEL=DEBUG
SQL_BIND_LOG_LEVEL=TRACE

# JVM Options (pour Docker)
JAVA_OPTS=-Xms512m -Xmx1024m
